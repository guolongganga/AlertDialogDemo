<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.menudemo.MainActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示一般dialog"/>
    <Button
        android:id="@+id/but_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示单选列表AlertDialog"/>
    <Button
        android:id="@+id/but_cons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义AlertDialog"/>
    <Button
        android:id="@+id/but_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示圆形的alertDialog"/>
    <Button
        android:id="@+id/but_horzonial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示水平的进度条AlertDialog"/>
    <Button
        android:id="@+id/but_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示日历"/>

    <Button
        android:id="@+id/but_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示时间"/>




</LinearLayout>
